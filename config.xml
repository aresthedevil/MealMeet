<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id = "com.phonegap.aresthedevil.helloworld"
        version = "1.3">
  <name>Meal Meet</name>

  <description>
    Meal Meet
  </description>

  <author email="aresthedevil@gmail.com">
    Joel Cedric Lengeling 
  </author>

  <!-- phone features (permissions) -->
  <feature name="http://api.phonegap.com/1.0/file" />
  <feature name="http://api.phonegap.com/1.0/network" />
  <feature name="http://api.phonegap.com/1.0/camera" />
  <feature name="http://api.phonegap.com/1.0/device" />
  
  <!--  
  <feature name="http://api.phonegap.com/1.0/battery" />
  <feature name="http://api.phonegap.com/1.0/device" />
  <feature name="http://api.phonegap.com/1.0/geolocation" />
  <feature name="http://api.phonegap.com/1.0/contacts" />
  <feature name="http://api.phonegap.com/1.0/media" />
  <feature name="http://api.phonegap.com/1.0/notification" />  
  
  -->
  
  <!-- plugins -->
  <!-- <gap:plugin name="com.phonegap.plugins.barcodescanner" />  -->
 <gap:plugin name="org.apache.cordova.camera" />
 <gap:plugin name="org.apache.cordova.device" />
 <gap:plugin name="org.apache.cordova.network-information" />
 <gap:plugin name="org.apache.cordova.file" />
 <gap:plugin name="org.apache.cordova.file-transfer" />

  
  <!-- access external resources -->
  <access origin="*" subdomains="true" />

  <icon src="icon.png" width="128" height="128"/> 

  <gap:platform name="android" />
	

  <preference name="phonegap-version" value="3.1.0" />
  <preference name="orientation" value="default" />
  <preference name="target-device" value="universal" />
  <preference name="splash-screen-duration" value="1000" />
  <preference name="load-url-timeout" value="90000" />
  
</widget>
